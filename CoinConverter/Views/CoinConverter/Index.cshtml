@model Application.ViewModel.ConverterViewModel;
@{
    ViewData["Title"] = "Convertidor de Moneda";
}

<form method="get" asp-controller="CoinConverter" id="form" class="container p-4 mt-5">
    <section class="row">
        <div class="form-group mx-auto text-center col-md-4">
            <h1 class="display-4"> Convierte tus <br /> <b>Divisas</b> </h1>
            <div class="mx-auto w-100 mt-5">

                <div class="input-group mb-3">
                    <span class="input-group-text bg-success text-white">$</span>
                    <input asp-for="Amount" type="number" min="1" step="any" class="form-control" aria-label="Amount (to the nearest dollar)" placeholder="Cantidad">
                    <span class="input-group-text bg-light">.00</span>
                </div>

                <div class="d-flex gap-3">
                    <section class="input-group mb-3">
                        <label class="badge bg-dark text-wrap fs-6 d-flex align-items-center"> De: </label>
                        <select asp-for="RateToConvert" class="form-select" aria-label="Default select example">
                          <option value="peso" selected>RD$ - Peso</option>
                          <option value="dolar">USD$ - Dolar</option>
                          <option value="euro">EUR€ - Euro</option>
                        </select>
                    </section>
                    <section class="input-group mb-3">
                        <label class="badge bg-dark text-wrap fs-6 d-flex align-items-center"> A: </label>
                        <select asp-for="RateToConvertTo" class="form-select" aria-label="Default select example">
                          <option value="peso">RD$ - Peso</option>
                          <option value="dolar" selected>USD$ - Dolar</option>
                          <option value="euro">EUR€ - Euro</option>
                        </select>
                    </section>
                </div>
            </div>
            <button type="submit" class="btn btn-dark btn-block w-100 mt-3"> Convertir </button>
        </div>
    </section>
</form>


@{
    if (@Model.Amount > 0)
    {
        <div class="alert alert-success alert-dismissible fade show mx-auto col-md-4" role="alert">
          Resultado: <strong> @String.Format("{0:0.00}", Model.Result) </strong>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
}


